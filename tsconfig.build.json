{
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react-native",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "noEmit": false,
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["lib"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
